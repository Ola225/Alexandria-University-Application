<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicInfoActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:text="Student Basic Info"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/firstNameEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="First Name"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Middle Name :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/middleNameEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Middle Name"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/lastNameEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Last Name"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nationality :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/nationalityEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Nationality"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Id :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/studentIdEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Student Id"
            android:inputType="number"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Address :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/homeAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Home Address"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/dayBirthEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Age"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/genderEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Gender"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/collegeEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="College"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/termEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Term"
            android:inputType="number"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/yearEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Year"
            android:inputType="number"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/departmentEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Department"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/emailEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Email"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Phone :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/mobilePhoneEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Mobile Phone"
            android:inputType="phone"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Number :"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content">
        </Space>

        <EditText
            android:id="@+id/registrationNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Registration Number"
            android:inputType="number"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="Add Student"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/addStudentBtn"
        >

    </Button>


</LinearLayout>
</ScrollView>